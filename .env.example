# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=postsync-prod
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
FIRESTORE_DATABASE_ID=(default)

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro-latest

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=PostSync:v1.0.0 (by /u/yourusername)

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://yourapp.com/auth/linkedin/callback

# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Database Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Content Configuration
MAX_DAILY_POSTS=5
CONTENT_DISCOVERY_INTERVAL_MINUTES=30
POST_SCHEDULING_TIMEZONE=UTC

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_CLOUD_LOGGING_ENABLED=true

# Rate Limiting
REDDIT_RATE_LIMIT_REQUESTS_PER_MINUTE=60
LINKEDIN_RATE_LIMIT_REQUESTS_PER_MINUTE=100
TWITTER_RATE_LIMIT_REQUESTS_PER_MINUTE=300

# Feature Flags
ENABLE_AUTO_POSTING=true
ENABLE_CONTENT_APPROVAL=false
ENABLE_ANALYTICS=true
ENABLE_A_B_TESTING=false